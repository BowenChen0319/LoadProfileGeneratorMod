<Window x:Class="LoadProfileGenerator.ProgressbarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProgressbarWindow" Height="auto" Width="300" WindowStyle="ToolWindow" SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Label" Margin="5" HorizontalAlignment="Left" Name="LblDescription" TextWrapping="WrapWithOverflow" />
        <ProgressBar  Margin="5"  Grid.Row="1" Name="PgrBar" Height="30" Maximum="100" Minimum="0" />


    </Grid>
</Window>
